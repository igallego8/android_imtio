<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/drawer_pref_height"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/drawer_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />


    <ImageView
        android:id="@+id/drawer_item_img2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        android:visibility="gone"
        />


    <TextView
        android:layout_toRightOf="@+id/drawer_item_img2"
        android:id="@+id/drawer_item_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        style="@style/text_6"
        android:visibility="gone"
        />

    <TextView
        android:layout_toRightOf="@+id/drawer_item_img2"
        android:layout_below="@+id/drawer_item_text"
        android:id="@+id/drawer_item_text2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:paddingLeft="10dp"
        style="@style/text_6"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/drawer_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="right"
        android:paddingRight="10dp"
        android:visibility="gone"
        />

</RelativeLayout>