<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <!-- Customize your theme here. -->
    <!--</style>-->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@android:color/transparent</item>-->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="drawerArrowStyle">@style/Theme.Test.DrawerArrowStyle</item>
        <item name="showcaseViewStyle">@style/CustomShowcaseTheme3</item>
        <!--<item name="windowActionBarOverlay">true</item>-->
    </style>

    <style name="AppTheme" parent="AppBaseTheme">
        <!-- Customize your theme here. -->
    </style>

    <style name="bt">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#008</item>
    </style>

    <style name="text_opacity">
        <item name="android:opacity">opaque</item>
    </style>


    <style name="text_dark_opacity" parent="text_opacity">
        <item name="android:textColor">@color/grey900</item>
    </style>


    <style name="text_light_opacity" parent="text_opacity">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_grey_opacity" parent="text_opacity">
        <item name="android:textColor">@color/grey400</item>
    </style>

    <style name="primary_grey_text_opacity" parent="text_grey_opacity">
        <item name="android:alpha">87</item>
    </style>


    <style name="primary_dark_text_opacity" parent="text_dark_opacity">
        <item name="android:alpha">87</item>
    </style>

    <style name="secondary_dark_text_opacity" parent="text_dark_opacity">
        <item name="android:alpha">54</item>
    </style>

    <style name="third_dark_text_opacity" parent="text_dark_opacity">
        <item name="android:alpha">38</item>
    </style>

    <style name="primary_light_text_opacity" parent="text_light_opacity">
        <item name="android:alpha">100</item>
    </style>

    <style name="secondary_light_text_opacity" parent="text_light_opacity">
        <item name="android:alpha">70</item>
    </style>

    <style name="third_light_text_opacity" parent="text_light_opacity">
        <item name="android:alpha">30</item>
    </style>

    <style name="title_1" parent="primary_light_text_opacity">
        <item name="android:textSize">40sp</item>
    </style>

    <style name="text_1" parent="secondary_light_text_opacity">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text_2" parent="primary_dark_text_opacity">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_3" parent="secondary_dark_text_opacity">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text_4" parent="secondary_dark_text_opacity">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="text_6" parent="third_dark_text_opacity">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="text_5" parent="primary_light_text_opacity">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="text_7" parent="primary_grey_text_opacity">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="text_8" parent="third_dark_text_opacity">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/fab_material_blue_500</item>
    </style>

    <style name="text_9" parent="third_dark_text_opacity">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text_10" parent="third_dark_text_opacity">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="text_11" parent="third_dark_text_opacity">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="text_12" parent="third_dark_text_opacity">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_13" parent="third_dark_text_opacity">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_14" parent="third_dark_text_opacity">
        <item name="android:textSize">17sp</item>
    </style>

    <style name="text_15" parent="third_dark_text_opacity">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_16" parent="primary_light_text_opacity">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FullscreenTheme" parent="android:Theme.NoTitleBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">@style/ButtonBar</item>
        <item name="metaButtonBarButtonStyle">@style/ButtonBarButton</item>
    </style>

    <style name="ButtonBarButton" />

    <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>


    <style name="ToolBarStyle">
        <item name="titleTextAppearance">@style/TextAppearance.Widget.Event.Toolbar.Title</item>
    </style>

    <style name="TextAppearance.Widget.Event.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <!--Any text styling can be done here-->
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/toolbar_title</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.Test.DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/white</item>
    </style>

    <style name="ratingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">12dp</item>
    </style>

    <style name="TwoWayViewBase">
        <item name="android:background">#999999</item>
    </style>

    <style name="TwoWayView" parent="TwoWayViewBase">
        <item name="android:orientation">vertical</item>
        <item name="android:scrollbars">vertical</item>
    </style>


    <style name="TitleTextStyle">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
    </style>


    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/primary</item>
        <item name="android:background">@color/gray300</item>
        <item name="android:windowTitleStyle">@style/TitleTextStyle</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


    <style name="CustomShowcaseTheme" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#3300A621</item>
        <item name="sv_showcaseColor">#00801A</item>
        <item name="sv_buttonText">Hide</item>
        <item name="sv_tintButtonColor">false</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle</item>
    </style>

    <style name="CustomShowcaseTheme2" parent="ShowcaseView">
        <item name="sv_backgroundColor">#e51249d9</item>
        <item name="sv_showcaseColor">#25467A</item>
        <item name="sv_buttonText">Close</item>
        <item name="sv_titleTextAppearance">@style/CustomTitle2</item>
        <item name="sv_detailTextAppearance">@style/CustomText2</item>
    </style>

    <style name="CustomShowcaseTheme3" parent="ShowcaseView.Light">
        <item name="sv_backgroundColor">#cfBF360C</item>
        <item name="sv_showcaseColor">@color/accent</item>
        <item name="sv_buttonText">Hide</item>
        <item name="sv_tintButtonColor">true</item>
        <item name="sv_titleTextAppearance">@style/text_16</item>
        <item name="sv_detailTextAppearance">@style/text_1</item>
    </style>

    <style name="CustomTitle" parent="TextAppearance.ShowcaseView.Title">
        <item name="android:textColor">#00801A</item>
    </style>

    <style name="CustomTitle2" parent="TextAppearance.ShowcaseView.Title.Light">
        <item name="android:textColor">#de000000</item>
    </style>

    <style name="CustomText2" parent="TextAppearance.ShowcaseView.Detail.Light">
        <item name="android:textColor">#8a000000</item>
    </style>

    <style name="ListItemBigtext">
        <item name="android:textColor">#25467A</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="ListItemSubtext">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

</resources>
