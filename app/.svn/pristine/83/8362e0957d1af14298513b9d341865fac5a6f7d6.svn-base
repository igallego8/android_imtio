<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container"
    android:clickable="true"
    android:layout_margin="3dp"
    android:foreground="?attr/selectableItemBackground"
    android:gravity="center">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="1dp"
            android:id="@+id/card_view">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:id="@+id/layout_icon">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/need_logo"
                            android:layout_centerHorizontal="true"
                            android:paddingTop="20dp"
                            android:paddingBottom="20dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/need_description"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:layout_below="@+id/need_logo"

                            android:layout_centerHorizontal="true" />

                    <!--View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/white"
                        android:id="@+id/divider"
                        android:layout_margin="3dp"
                        android:layout_below="@+id/need_description"
                       /-->


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/layout_icons"
                    android:padding="10dp"
                    >


                    <FrameLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/frame_icon_1"
                        android:layout_alignParentLeft="true"
                       >

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/bt_bid_icon"
                            android:src="@drawable/ic_assignment_ind_white_24dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:background="@android:color/transparent"

                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/count_bubble"
                            android:gravity="center"
                            android:layout_gravity="right"
                            android:padding="4dp"
                            android:layout_marginLeft="5dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="10sp"
                                />

                        </LinearLayout>

                    </FrameLayout>

                    <FrameLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:id="@+id/frame_icon_2"
                        android:layout_toRightOf="@+id/frame_icon_1">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/bt_msg_icon"
                            android:src="@drawable/ic_chat_bubble_white_24dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="10dp"
                            android:background="@android:color/transparent"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/count_bubble"
                            android:gravity="center"
                            android:layout_gravity="right"
                            android:padding="4dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="5dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="45"
                                android:textColor="#FFFFFF"
                                android:textStyle="bold"
                                android:textSize="10sp"
                                />

                        </LinearLayout>

                    </FrameLayout>
                </RelativeLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>
</LinearLayout>